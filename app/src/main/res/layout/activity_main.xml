<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    android:layout_gravity="center"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ellipse_bg"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="80dp"
            android:backgroundTint="@color/colorwhite"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-black"
                android:text="BChat"
                android:textColor="@color/white"
                android:textSize="45dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="right"
            android:text="sign In"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/midnight_blue"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">


            <TextView
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="80dp"
                android:layout_height="46dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="5dp"
                android:text="  +91"
                android:paddingTop="2dp"
                android:textSize="28sp"
                android:background="@drawable/ellipse_bg"
                android:backgroundTint="@color/midnight_blue"
                android:textColorHint="#202040"
                android:textColor="@color/white"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/emailID"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:elevation="5dp"
                android:hint="Enter Phone Number"
                android:layout_marginRight="10dp"
                android:textColorHint="#202040"
                app:boxStrokeColor="@color/blue_bg"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusTopStart="16dp"
                android:layout_gravity="center_horizontal">


                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/enterYourPhone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="15dp"
                    android:textColor="#000"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textSize="18sp">

                </com.google.android.material.textfield.TextInputEditText>

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/terms_and_condtion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/accept_terms_and_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:buttonTint="@color/blue_bg"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accept Terms &amp; Condition "
                    android:textColor="@color/midnight_blue"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="      click to Know more"
                    android:textColor="@color/blue_bg"
                    android:fontFamily="sans-serif-black"
                    android:clickable="true"
                    android:gravity="center_horizontal" />

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/sendOtpBtnId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="Send OTP"
            android:layout_marginHorizontal="60dp"
            android:textAllCaps="false"
            android:textColor="@color/colorwhite"/>

    </LinearLayout>

</LinearLayout>